#admin-profile
  width 100%
  margin-bottom 30px
  .admin-profile-form
    margin 0 auto
  .admin-profile-picture
    width 100%
    margin-bottom 15px
    position relative
    display flex
    flex-direction column
    align-items center
    .container
      width 120px
      height 120px
      display block
      margin 0 auto
      img
        width 120px
        height 120px
        border-radius 60px
        display block
        margin 0 auto
      .edit-button
      .no-avatar
        width 120px
        height 120px
        font-size 32px
        display flex
        align-items center
        justify-content center
        color $white
        margin 0 auto
        position absolute
        top 0
        cursor pointer
        opacity 0
        &:hover
          opacity 1
        .background
          width 100%
          height 100%
          border-radius 60px
          background-color $black
          opacity 0.4
          position absolute
          top 0
          left 0
        .icon
          img
            width auto
            height auto
            border-radius 0
      .no-avatar
        background-color $blue
        opacity 1
        border-radius 60px
  .admin-profile-btn-container
    display table
    margin 0 auto
    button
      margin-left 15px
      margin-right 15px