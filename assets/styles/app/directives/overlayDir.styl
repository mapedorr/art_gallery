overlay-dir
  #overlay-curtain
  #overlay-content
    width 100%
    height 100%
    position fixed
    top 0
    left 0
    display none

  #overlay-curtain
    background-color black
    opacity 0.7
    z-index getZindex(1)
    &.overlay-visible
      display block

  #overlay-content
    flex-direction row
    align-items center
    align-content center
    color $white
    z-index getZindex(1)
    @media $smartphone
      overflow auto
    &.overlay-visible
      display block
    .close-button-container
      width auto
      margin 0
      .close-button
        width 45px
        height 45px
        position absolute
        right 5px
        top 5px
        cursor pointer
        z-index getZindex(1)
    // set up the image wrapper (contains navigation arrows, thumbnail and description)
    // use: Float layout and Flex layout
    .image-wrapper
      display inline-flex
      width 100%
      height 80%
      margin-top 25px
      @media $smartphone
        margin-top 60px
      .left-arrow
      .right-arrow
        display flex
        align-items center
        width 20%
        @media $tablet
          width 10%
        @media $smartphone
          width 50%
          height 85%
          z-index getZindex(1)
        img
          cursor pointer
      .left-arrow
        float left
        img
          margin-left 10px
      .right-arrow
        float right
        justify-content flex-end
        img
          margin-right 10px
      .card-wrapper
        width 60%
        @media $tablet
          width 80%
        @media $smartphone
          width 100%
          height auto
          overflow auto
          position absolute
          left 0
        .thumbnail-detail-wrapper
          width 60vh
          margin 0 auto
          display flex
          flex-direction column
          @media $smartphone
            width 100%
          img
          .detail-wrapper
            max-width 100%
            @media $smartphone
              width 95%
              margin 0 auto
          .detail-wrapper
            position absolute
            display flex
            flex-direction column
            padding 10px 0
            @media $smartphone
              position relative
            .title
            .artist
              font-weight bold
            .title
              font-size 24px
            .artist
              font-size 18px
            .description
            .price
              font-size 14px
            .price
              color $cardPrice
              font-style italic