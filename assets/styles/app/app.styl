// -----------------------------------------------------------------------------
// GLOBAL VARS
// (Base color for Color rule: #04AD65)
$green = #04AD65
$greenBtn = #039356
$greenBtnL1 = #04BA6C
$blue = #1E4247
$blueL1 = #3E8993
$red = #932C1A
$redL1 = #D33F25
$white = #F7F7F7
$gray = #E7E7E7
$black = #313131
$cardPrice = #ffcccc
$smartphone = 'screen and (min-width: 320px) and (max-width: 767px)'
$tablet = 'screen and (min-width: 767px) and (max-width: 991px)'
$desktop = 'screen and (min-width: 992px)'
$zLevel = 0

// -----------------------------------------------------------------------------
// GLOBAL FUNCTIONS
// function that gets the next z-index to be assigned for components that will
// be over others (like popups, alerts, and that kind of things)
getZindex(newLevel)
  define('$zLevel', $zLevel + newLevel, true)
  $zLevel

// -----------------------------------------------------------------------------
// GLOBAL STYLES DEFINITION
body
  color $black
  font-family Arial
  z-index getZindex(0)
  &.hide-scroll
    overflow hidden

.form-control
.btn
  border-radius 0
  
.form-control
  border 2px solid $black
  margin-bottom 5px
  padding 10px
  &:focus
    border-color $green
    box-shadow none

.btn
  cursor pointer
  border 2px solid
  background none
  padding 10px 15px
.btn-primary
  border-color $greenBtn
  &:hover
    border-color $greenBtnL1
.btn-danger
  border-color $red
  &:hover
    border-color $redL1

@import 'header/header'
@import 'login/login'
@import 'homepage/homepage'
@import 'admin/profile'
@import 'directives/overlayDir'