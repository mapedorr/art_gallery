#main-footer
  width 100%
  position fixed
  bottom 0
  left 0
  z-index getZindex(1)
  .main-footer-container
    display block
    padding 10px 0
    text-align center
    background-color $blueL1
    font-size 14px
    font-weight bold
    color white
    .loading-wrapper
      color $black
      background-color white
      border-bottom 2px solid $yellow
      text-align center
      width 100%
      height 30px
      line-height 30px
      position absolute
      top -30px
      display none
      &.show
        display block
    .txt:first-child
      margin-bottom 5px